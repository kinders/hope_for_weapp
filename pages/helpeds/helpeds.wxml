<!--pages/helpeds/helpeds.wxml-->
<view  class="topbar">
  <text>列表</text >
  <navigator url="../helps/helps" open-type="switchTab">未满足请求</navigator >
  <navigator url="../groups_helps/groups_helps" open-type="redirect" >群请求</navigator> 
</view>
<view style="padding: 0.5rem; border-bottom: inset;">
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{helpeds_receiver_nicknames}}">
  <view class="picker">
      筛选：{{helpeds_receiver_nicknames[index]}}
      <text style="float: right;">({{helpeds_length}})</text>
    </view>
  </picker>
</view>
<view class="list">
  <block wx:for="{{helpeds}}" wx:key="id" wx:for-item="helped">
  <view class="{{is_hidden[index]}}">
     <view class="item-key">
       <text>{{index + 1}}    </text>
       <text>{{helped.created_at}}</text>
     </view>
     <view class="friend" style="padding: 0.25rem;">
       <text wx:if="{{helped.receiver_id == current_user.id}}" style="color: gray;">{{helped.nickname}}</text>
       <!--
       <navigator url="../friend/friend?friend_id={{helped.receiver_id}}" wx:else>{{helped.nickname}}</navigator>
       -->
       <text wx:else>{{helped.nickname}}</text>
     </view>
     <view class="item-value">
       <navigator url="../todo/todo?todo_id={{helped.id}}&user_id={{current_user.id}}&user_nickname={{current_user.nickname}}&receiver_nickname={{helped.nickname}}&created_at={{helped.created_at}}&is_finish=true&content={{helped.content}}">{{ helped.content}}</navigator>
     </view>
  </view>
  </block>
</view>