<!--pages/group_helps/group_helps.wxml-->
<view  class="topbar">
  <text>列表({{group_helps_length}})</text >
  <navigator url="../group_helpeds/group_helpeds?group_id={{group.group_id}}&name={{group.name}}" open-type="redirect">已满足群请求</navigator >
  <navigator url="../group/group?group_id={{group.group_id}}&name={{group.name}}" open-type="redirect">群成员</navigator >
</view>
<view class="topbar" style="background-color:gray;">
<text>群组名称：</text>
<text style="margin: auto;">{{group.name}}</text>
</view>
<view class="list">
  <block wx:for="{{group_helps}}" wx:key="id" wx:for-item="group_help">
    <view class="item-key">
      <text>{{index + 1}}    </text>
      <text>{{group_help.created_at}}</text>
    </view>
    <view class="item-value">
      <navigator url="../helps_in_grouptodo/helps_in_grouptodo?id={{group_help.id}}&time={{group_help.created_at}}&content={{group_help.content}}&is_finish=f&group_id={{group.group_id}}&name={{group.name}}">{{ group_help.content}}</navigator>
    </view>
  </block>
</view>