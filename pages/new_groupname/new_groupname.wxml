<!--pages/new_groupname/new_groupname.wxml-->
<view  class="topbar">
  <text style="color: green;">更改群称</text>
  <text bindtap="formReset">返回</text>
</view>
<view  class="topbar" style="background-color:green;">
<text>原来的群称：</text>
<text style="margin: auto;">{{group_name}}</text>
</view>
<view class="container">
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section-title">请输入新的群称：</view>
    <view class="section-input" style="padding: 1rem 0 0 0">
        <input name="name" type="text" placeholder="在此输入" value="{{group_name}}"/>
    </view>
  </view>
  <view class="btn-area">
    <view style="padding: 1rem 0 0 0">
    <button formType="submit" type="primary">提交群称</button>
    </view>
  </view>
</form>
</view>
